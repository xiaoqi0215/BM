<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp11">

        <ImageView
            android:id="@+id/iv_noti_logo"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:src="@mipmap/birthday_tab_add"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp8"
            android:text="舅来帮"
            android:textColor="@color/text_register"
            android:textSize="@dimen/font_m"/>

        <TextView
            android:id="@+id/tv_noti_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="@dimen/dp16"
            android:textColor="@color/text_register"
            android:textSize="@dimen/font_s"
            tools:text="现在"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_noti_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp11"
        android:layout_marginTop="@dimen/dp13"
        android:textColor="@color/black"
        android:textSize="@dimen/font_l"
        tools:text="消息中心"/>

    <TextView
        android:id="@+id/tv_noti_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp11"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp13"
        android:paddingRight="@dimen/dp16"
        android:textColor="@color/text_register"
        android:textSize="@dimen/font_m"
        tools:text="您的订单已提交"/>
</LinearLayout>