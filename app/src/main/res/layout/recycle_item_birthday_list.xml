<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_rv_item"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp103"
    android:background="@drawable/shape_birthday_item_bg"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/iv_birthday_friend_item_icon"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_margin="12dp"
        android:layout_marginTop="@dimen/dp10"
        android:src="@mipmap/ic_birthday_friend_icon"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp10"
        android:layout_toRightOf="@id/iv_birthday_friend_item_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_birthday_friend_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="名字" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_birthday_friend_item_calendar"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                 />

            <TextView
                android:id="@+id/tv_birthday_friend_item_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="2月15日" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp10"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_birthday_friend_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15天"
            android:textColor="#ff0000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_birthday_friend_item_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="天后过20岁生日" />
    </LinearLayout>


</RelativeLayout>