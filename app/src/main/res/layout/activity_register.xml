<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.qixiao.bm.widget.MyActionBar
        android:id="@+id/tab_regidter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="注册账号"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></com.qixiao.bm.widget.MyActionBar>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/login_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_regidter" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_login_btn"
        android:text="立即注册"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view5" />

    <TextView
        android:id="@+id/tv_register_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:text="账号"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_register_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="密码"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_register_account"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_account" />

    <EditText
        android:id="@+id/et_register_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:background="@null"
        android:ems="12"
        android:hint="请输入账号"
        android:inputType="phone"
        android:maxLength="11"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_register_account"
        app:layout_constraintBottom_toBottomOf="@+id/tv_register_account"
        app:layout_constraintStart_toEndOf="@+id/tv_register_account" />

    <EditText
        android:id="@+id/et_register_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:background="@null"
        android:digits="@string/et_password_input_type"
        android:ems="12"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="8"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_register_pwd"
        app:layout_constraintBottom_toBottomOf="@+id/tv_register_pwd"
        app:layout_constraintStart_toEndOf="@+id/tv_register_pwd" />

    <EditText
        android:id="@+id/et_register_repwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@null"
        android:digits="@string/et_password_input_type"
        android:ems="12"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:maxLength="8"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_register_repwd"
        app:layout_constraintStart_toEndOf="@+id/tv_register_repwd" />

    <TextView
        android:id="@+id/tv_register_repwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="确认密码"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_register_account"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_pwd" />

    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_A5ADB3"
        app:layout_constraintStart_toStartOf="@+id/tv_register_pwd"
        app:layout_constraintTop_toBottomOf="@+id/et_register_pwd"></View>

    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_A5ADB3"
        app:layout_constraintStart_toStartOf="@+id/tv_register_account"
        app:layout_constraintTop_toBottomOf="@+id/et_register_account"></View>

    <View
        android:id="@+id/view5"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_A5ADB3"
        app:layout_constraintStart_toStartOf="@+id/tv_register_repwd"
        app:layout_constraintTop_toBottomOf="@+id/et_register_repwd"></View>

</android.support.constraint.ConstraintLayout>