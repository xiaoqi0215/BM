<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <com.qixiao.bm.widget.MyActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="发送短信"></com.qixiao.bm.widget.MyActionBar>
    //手机
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_send_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="16sp"

            android:text="手机" />

        <EditText
            android:id="@+id/et_send_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:textColor="@color/color_555555_black"
            android:layout_toRightOf="@id/tv_send_tel"
            android:background="@null"
            android:hint="请输入手机号码" />
        <ImageView
            android:id="@+id/iv_send_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/phone_book"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/view_color"
        android:layout_height="1dp"></View>
    //祝福语
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_send_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="祝福语" />

        <EditText
            android:id="@+id/et_send_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/tv_send_word"
            android:background="@null"
            android:hint="请输入短信祝福语"
            android:textColor="@color/color_555555_black"
            android:maxLines="5"
            android:minLines="3" />

    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:textSize="18sp"
        android:background="@drawable/shape_friend_add_button"
        android:text="发送" />

</LinearLayout>